extends ../../layouts/default

include ../../mixins/organiser
include ../../mixins/coc

block intro
	.page-intro: .container
		h1.page-title About
		p.lead Every 3rd Wednesday of the month you'll find us talking about what we're doing and what's happening around us in the world of JavaScript.
		p.lead SydJS wouldn't be possible without our organisers:

block content
	.page-content
		.section.highlight: .container
			//- h2 Organisers
			//- p.lead Each month the SydJS team works to bring you great presenters in a great venue.
			.row.about-organisers
				each org in organisers
					.col-sm-3
						+organiser(org)
			
		// Code of Conduct
		+coc(__('coc'))

block js
	// twitter
	script.
		!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");
